body
   margin: 0px

p
   font-style: normal
   font-size: 18px
   color: #777
   margin: 5px

img
   width: 300px

.semi_info, .after_input
   font-size: 14px
   color: #777
   letter-spacing: normal
   display: block

.after_input
   display: inline-block
   margin-left: 10px

.custom-file-input
   border: 0px

.custom-file-input::-webkit-file-upload-button
   visibility: hidden

.custom-file-input::before
   content: 'Select your wallet'
   display: inline-block
   border: none
   color: #FFF
   padding: 10px 20px
   margin-left: 50px
   background-color: #000
   border-radius: 1.5em
   letter-spacing: 2px
   font-size: 11px
   text-transform: uppercase
   cursor: pointer

.custom-file-input:hover::before
   color: #000
   background-color: #f5d327

label
   display: block
   font-weight: bold

input
   padding: 10px
   font-size: 16px
   margin: 10px 0 10px
   border-radius: 4px
   border: 1px solid #CCC

h1, h2, h3, label
   font-family: Raleway,Raleway,Arial,Helvetica,sans-serif
   font-size: 1.9em
   letter-spacing: 2px

h1
   margin: 0
   margin-top: 50px
   text-align: center
   font-size: 2em

h2
   font-size: 4em
   position: absolute
   top: 0px
   left: 0px
   margin: 20px 20px 20px 20px

.button
   border: none
   color: #FFF
   padding: 10px 20px
   background-color: #000
   border-radius: 1.5em
   letter-spacing: 2px
   text-transform: uppercase
   cursor: pointer
   margin-top: 10px
   &:hover
      color: #000
      background-color: #f5d327

.error_message
   position: absolute
   bottom: 15px
   left: 0px
   color: rgb(250, 102, 102)
   text-align: center
   width: 100%

.application
   margin: 0 auto
   padding-top: 50px
   background-color: #f8f8f8
   color: #506e82
   font-family: "Helvetic Neue",Helvetica,Arial,sans-serif
   text-align: center

.stages
   width: 600px
   text-align: center
   margin: 0 auto

.stage
   display: inline-block
   position: relative
   width: 100%
   box-sizing: border-box
   -webkit-box-sizing: border-box
   padding: 40px 100px
   margin: 50px 0
   background-color: #FFF
   border: 1px solid #E4E4E4
   border-width: 0px 1px 1px 0px
   border-radius: 10px

@media only screen and (max-device-width: 600px)
   .stages
      width: 300px
   .stage
      padding: 20px
   h2
      display: none

.stage:not(.active)
   opacity: 0.3
   pointer-events none

.application
   padding-bottom 100px

a.button
   text-decoration none
   font-size 0.6em
   display inline-block

button.restart
   position fixed
   top 20px
   left 20px
   font-size 0.75em
   background #eee
   color #333
   border solid 1px #ccc


.stage.active
   border 2px solid #506e82
   padding 39px 75px
